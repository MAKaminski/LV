{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Start All Services (Docker)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/start-services.js",
            "console": "integratedTerminal",
            "env": {
                "DOCKER_COMPOSE_FILE": "${workspaceFolder}/docker/docker-compose.yml"
            }
        },
        {
            "name": "üêç Debug FastAPI Backend",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/backend/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/backend"
            },
            "args": []
        },
        {
            "name": "üìä Debug Excel Analysis",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/analyze_excel.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "üîÑ Debug Data Migration",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/migrate_excel_data.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "ü§ñ Debug NIA Indexing",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/nia_index/index_nia_final.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "‚ö° Debug Frontend (React)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/frontend/node_modules/.bin/react-scripts",
            "args": ["start"],
            "cwd": "${workspaceFolder}/src/frontend",
            "console": "integratedTerminal",
            "env": {
                "BROWSER": "none",
                "REACT_APP_API_URL": "http://localhost:8000"
            }
        },
        {
            "name": "üß™ Run Backend Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["-v", "src/backend/tests/"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/backend"
            }
        },
        {
            "name": "üß™ Run Frontend Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/frontend/node_modules/.bin/react-scripts",
            "args": ["test", "--watchAll=false"],
            "cwd": "${workspaceFolder}/src/frontend",
            "console": "integratedTerminal"
        },
        {
            "name": "üì¶ Build Frontend",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/frontend/node_modules/.bin/react-scripts",
            "args": ["build"],
            "cwd": "${workspaceFolder}/src/frontend",
            "console": "integratedTerminal"
        },
        {
            "name": "üê≥ Docker: Start PostgreSQL",
            "type": "node",
            "request": "launch",
            "program": "docker-compose",
            "args": ["-f", "${workspaceFolder}/docker/docker-compose.yml", "up", "postgres", "-d"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "üê≥ Docker: Start Backend",
            "type": "node",
            "request": "launch",
            "program": "docker-compose",
            "args": ["-f", "${workspaceFolder}/docker/docker-compose.yml", "up", "backend", "-d"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "üê≥ Docker: Start Frontend",
            "type": "node",
            "request": "launch",
            "program": "docker-compose",
            "args": ["-f", "${workspaceFolder}/docker/docker-compose.yml", "up", "frontend", "-d"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "üê≥ Docker: Stop All Services",
            "type": "node",
            "request": "launch",
            "program": "docker-compose",
            "args": ["-f", "${workspaceFolder}/docker/docker-compose.yml", "down"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "üîç Database: Connect to PostgreSQL",
            "type": "node",
            "request": "launch",
            "program": "docker",
            "args": ["exec", "-it", "lv_postgres", "psql", "-U", "postgres", "-d", "lv_project"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "üìä Database: View Schema",
            "type": "node",
            "request": "launch",
            "program": "docker",
            "args": ["exec", "-it", "lv_postgres", "psql", "-U", "postgres", "-d", "lv_project", "-c", "\\dt"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "üöÄ Full Stack Development",
            "configurations": [
                "üê≥ Docker: Start PostgreSQL",
                "üê≥ Docker: Start Backend",
                "üê≥ Docker: Start Frontend"
            ],
            "stopAll": true
        },
        {
            "name": "üß™ Run All Tests",
            "configurations": [
                "üß™ Run Backend Tests",
                "üß™ Run Frontend Tests"
            ],
            "stopAll": true
        }
    ]
} 